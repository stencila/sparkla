{
  "name": "@stencila/sparkla",
  "version": "0.1.0",
  "description": "Secure and fast microVMs using Amazon Firecracker",
  "main": "index.js",
  "scripts": {
    "lint": "eslint 'host/**/*.{ts,js}' --fix",
    "format": "npx prettier --write './**/*.{js,json,md,ts,yaml}'",
    "build": "tsc",
    "serve": "node dist/host/serve",
    "serve:dev": "JWT_SECRET=not-a-secret ts-node-dev host/serve --debug"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@stencila/dev-config": "^1.2.2",
    "ts-node": "^8.4.1",
    "ts-node-dev": "^1.0.0-pre.42",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@stencila/executa": "^0.3.0",
    "@stencila/logga": "^1.4.0",
    "@stencila/schema": "^0.30.1"
  },
  "prettier": "@stencila/dev-config/prettier-config.json",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "scope-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ]
    }
  },
  "eslintConfig": {
    "extends": "@stencila/eslint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "release": {
    "extends": "@stencila/semantic-release-config"
  }
}
